<%# app/views/gossips/new.html.erb #%>

<div class="container mt-5">
  <h2 class="mb-4 text-center">Créer un nouveau potin 📝</h2>

  <% if @gossip.errors.any? %>
    <div class="alert alert-danger">
      <h4>Nous n'avons pas réussi à créer le potin :</h4>
      <ul>
        <% @gossip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card shadow-sm p-4">
    <%= simple_form_for @gossip do |f| %>
      <div class="mb-3">
        <%= f.input :title, label: "Titre", 
          placeholder: "Titre du potin", input_html: { class: "form-control" } %>
      </div>

      <div class="mb-3">
        <%= f.input :content, as: :text, label: "Contenu", 
          placeholder: "Raconte ton potin ici...", input_html: { class: "form-control", rows: 5 } %>
      </div>

      <div class="text-center">
        <%= f.button :submit, "Créer le potin", class: "btn btn-primary px-4" %>
      </div>
    <% end %>
  </div>
</div>
