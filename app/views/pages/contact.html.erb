<%# app/views/pages/contact.html.erb #%>

<div class="container mt-5">
  <div class="card shadow-lg p-4 rounded">
    <h1 class="text-center text-primary mb-4">ðŸ“© Contactez-nous</h1>
   <%= form_with url: contact_path, method: :post, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, "Nom complet", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Votre nom" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, "Adresse email", class: "form-label" %>
    <%= f.email_field :email, class: "form-control", placeholder: "nom@example.com" %>
  </div>

  <div class="mb-3">
    <%= f.label :message, "Message", class: "form-label" %>
    <%= f.text_area :message, class: "form-control", rows: 4, placeholder: "Votre message..." %>
  </div>

  <div class="d-grid">
    <%= f.submit "Envoyer", class: "btn btn-primary" %>
  </div>
<% end %>

  </div>
</div>
