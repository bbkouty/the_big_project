<%# app/views/gossips/edit.html.erb #%>

<div class="card shadow mb-4">
  <div class="card-body">
    <h3 class="card-title text-primary">Modifier le potin</h3>

    <%= form_with(model: @gossip, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :title, "Titre", class: "form-label" %>
        <%= f.text_field :title, class: "form-control", value: @gossip.title %>
      </div>

      <div class="mb-3">
        <%= f.label :content, "Contenu", class: "form-label" %>
        <%= f.text_area :content, class: "form-control", value: @gossip.content %>
      </div>

      <%= f.submit "Mettre à jour", class: "btn btn-success" %>
      <%= link_to "⬅ Annuler", gossip_path(@gossip), class: "btn btn-secondary ms-2" %>
    <% end %>
  </div>
</div>
