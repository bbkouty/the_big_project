<%# app/views/cities/show.html.erb #%>

<div class="card shadow mb-4">
  <div class="card-body">
    <h2 class="card-title text-primary"><%= @city.name %></h2>
    <p class="text-muted">Code postal : <%= @city.zip_code %></p>
  </div>
</div>

<% if @city.gossips.any? %>
  <h4 class="mb-3">Potins des habitants :</h4>
  <div class="row">
    <% @city.gossips.each do |gossip| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm h-100">
          <div class="card-body d-flex flex-column">
            
            <h5 class="card-title"><%= gossip.title %></h5>
            <p class="card-text"><%= truncate(gossip.content, length: 100) %></p>
            
            <p class="text-muted mb-2">
              👤 Auteur : 
              <%= link_to gossip.user.first_name, user_path(gossip.user), class: "fw-bold text-decoration-none" %>
            </p>
            
            <div class="mt-auto d-flex justify-content-between align-items-center">
              <%= link_to "Voir plus", gossip_path(gossip), class: "btn btn-outline-primary btn-sm" %>
              
              <% if current_user %>
                <% if gossip.likes.exists?(user: current_user) %>
                  <%= button_to gossip_like_path(gossip, gossip.likes.find_by(user: current_user)),
                                method: :delete,
                                class: "btn btn-sm btn-outline-danger d-flex align-items-center gap-1" do %>
                    <i class="bi bi-hand-thumbs-up-fill">👎</i> 
                  <% end %>
                <% else %>
                  <%= button_to gossip_likes_path(gossip),
                                method: :post,
                                class: "btn btn-sm btn-outline-success d-flex align-items-center gap-1" do %>
                    <i class="bi bi-hand-thumbs-up">👍</i>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
          
          <div class="card-footer text-muted small">
            Publié le <%= l(gossip.created_at, format: :short) %> 
            · ❤️ <%= gossip.likes.count %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-muted"><em>Aucun potin publié par les habitants pour le moment.</em></p>
<% end %>

<div class="mt-3">
  <%= link_to "⬅ Retour aux potins", root_path, class: "btn btn-secondary" %>
</div>
